{
    "compilerOptions":{
        // ts compiler settings
        "strict":true,
        "jsx":"react-jsx",
        "noEmit":true,

        "types":["vite/client"],

        // lib settings
        "lib":["dom","ESNext"],
        "target":"ESNext",

        // module/import settings
        "esModuleInterop":false,
        "moduleResolution":"node",
        "module":"ESNext",
        "resolveJsonModule":true,
        "isolatedModules":true,
        "allowSyntheticDefaultImports": true,

        // pathing
        "baseUrl":".",
        "paths":{
            "components/*":["web/components/*"],
            "lib/*":["web/lib/*"],
            "css/*":["web/css/*"],
            "apis/*":["web/apis/*"],
            "hooks/*":["web/hooks/*"],
            "assets/*":["web/assets/*"]
        }
    },

    "include":[
        "**/*.d.ts",
        "web/**/*.ts",
        "web/**/*.tsx",
        "stories/**/*.ts",
        "stories/**/*.tsx"
    ],

    "exclude":[
        "node_modules"
    ]
}